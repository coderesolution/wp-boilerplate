{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "sage/test-block",
  "title": "Test Block",
  "description": "A simple ACF test block to verify custom blocks are working in Sage.",
  "category": "text",
  "icon": "star-filled",
  "keywords": ["test", "example", "sage", "acf"],
  "textdomain": "sage",
  "acf": {
    "blockVersion": 3,
    "renderTemplate": "test-block.php",
    "hideFieldsInSidebar": true,
    "mode": "preview"
  },
  "supports": {
    "align": false,
    "anchor": true,
    "color": {
      "text": false,
      "background": true
    },
    "html": false,
    "spacing": {
      "margin": ["top", "bottom"],
      "padding": ["top", "bottom"]
    },
    "jsx": true
  }
}
